package desafioconceitosbasicos;

import javax.swing.JOptionPane;

public class Imc {
	
	public static void main(String[] args) {
//		IMC = kg ÷ (alt × alt) = kg/m2 
		
		String valor1 = JOptionPane.showInputDialog("Digite seu peso:");
		String valor2 = JOptionPane.showInputDialog("Digite sua altura:");
		
					
		double peso = Double.parseDouble(valor1);
		double altura = Double.parseDouble(valor2);
		
		double conversao = peso / (altura * altura);
		String resultado = String.format("%.1f", conversao);
				
		JOptionPane.showMessageDialog(null, "Seu IMC é " + resultado);
		
//		double imc1 = Double.parseDouble(resultado);
		
		/*if(imc1 <= 17) {
			System.out.println("\nVocê está muito abaixo do peso.");
		}else if (imc1 >= 17.00 && imc1 < 18.50) {
			System.out.println("\nVocê está abaixo do peso.");
		}else if (imc1 >= 18.50 && imc1 < 25) {
			System.out.println("\nSeu peso está normal.");
		}else if (imc1 >= 25.00 && imc1 <30) {
			System.out.println("\nVocê está acima do peso.");
		}else if (imc1 >= 30.00 && imc1 <35) {
			System.out.println("\nObesidade grau I.");
		}else if (imc1 >= 35.00 && imc1 <40) {
			System.out.println("\nObesidade grau II.");
		}else 
			System.out.println("\nObesidade grau III.");*/
	
	}

}


/*Abaixo de 17	Muito abaixo do peso
Entre 17 e 18,49	Abaixo do peso
Entre 18,50 e 24,99	Peso normal
Entre 25 e 29,99	Acima do peso
Entre 30 e 34,99	Obesidade I
Entre 35 e 39,99	Obesidade II (severa)
Acima de 40	Obesidade III (mórbida)*/